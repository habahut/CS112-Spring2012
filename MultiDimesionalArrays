#! /usr/bin/env python

grid = []
for i in range(10):   # ROWS
    row = []
    for j in range(10): # COLUMNS
        row.append((i*10) + j)
    grid.append(row)

grid[5][5] = 0

for i,row in enumerate(grid):
    for j,val in enumerate(row):
        line = "%2d" %(val)
        print line,
    print ""
    
print
print

print grid


